<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brejza.matt.habmodem"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <service android:name=".Dsp_service" />

        <activity
            android:name=".StatusScreen"
            android:label="@string/title_activity_status_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_map" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brejza.matt.habmodem.StatusScreen" />
        </activity>
        <activity
            android:name=".FFTActivity"
            android:label="@string/title_activity_fft" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brejza.matt.habmodem.StatusScreen" />
        </activity>
    </application>

</manifest>